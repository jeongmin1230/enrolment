<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".CheckActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="입력한 정보 확인 "
        android:layout_margin="30dp"
        android:textSize="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="25dp"
            android:text="신청자 이름" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="이름"
            android:textAlignment="center"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textSize="25dp"
            android:background="#EDE7F6"
            android:id="@+id/tvApplicantName" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="신청자 핸드폰 번호" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="번호"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25dp"
        android:background="#EDE7F6"
        android:id="@+id/tvApplicantPhone" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="성별" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="성별"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25dp"
        android:background="#EDE7F6"
        android:id="@+id/tvApplicantSex" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="과목" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EDE7F6"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/subject"
            android:layout_toRightOf="@id/tvApplicantSubject"
            android:id="@+id/iv" />

        <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="과목이름"
        android:textAlignment="center"
        android:layout_marginLeft="150dp"
        android:layout_marginRight="15dp"
        android:textSize="25dp"

        android:id="@+id/tvApplicantSubject" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="선택 시간" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="시간"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25dp"
        android:background="#EDE7F6"
        android:id="@+id/tvApplicantSlot" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="25dp"
        android:text="기타사항" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="입력값"
        android:textAlignment="center"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:textSize="25dp"
        android:background="#EDE7F6"
        android:id="@+id/tvApplicantEtc" />
    </LinearLayout>



<!--    이름, 전화번호, 성별, 과목이미지, 과목이름, 시간대, 기타입력사항 나와야함-->